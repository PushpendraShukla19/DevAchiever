@{
    ViewData["Title"] = "Result Page";
}
<link href="~/assets/css/certificate.css" rel="stylesheet">
<!-- Hero Section -->
<section id="portfolio-details" class="portfolio-details section">

    <div class="container">
        <div class="certificate">
            <div class="certificate-border">
                <header class="certificate-header">
                    <div class="company-logo">
                        <img src="logo.png" alt="Company Logo">
                    </div>
                    <div class="company-name">
                        <h2>Your Company Name</h2>
                    </div>
                </header>

                <main class="certificate-body">
                    <h1 class="certificate-title">Certificate of Completion</h1>
                    <h2 class="certificate-subtitle">Confined Space Training</h2>

                    <p class="certificate-text">This certificate acknowledges that</p>

                    <h2 class="recipient-name">[Recipient’s Full Name]</h2>

                    <p class="certificate-text">has successfully completed</p>

                    <h3 class="program-name">Confined Space Entry and Rescue Training Program</h3>

                    <p class="certificate-description">
                        Ensuring expertise in confined space entry, rescue procedures, and emergency response, this
                        <strong>8-hour training</strong> awarded <strong>8 CPD points</strong> and aligns with National Institute for
                        Occupational Safety and Health (NIOSH) standards.
                    </p>

                    <div class="certificate-dates">
                        <p><strong>Date of Issuance:</strong> 01/02/2025</p>
                        <p><strong>Date of Validity:</strong> 01/02/2028</p>
                    </div>
                </main>

                <footer class="certificate-footer">
                    <div class="footer-left">
                        <div class="niosh-box">
                            <p><strong>NIOSH</strong><br>National Institute for Occupational Safety and Health</p>
                        </div>
                        <p class="signature">John Doe, Training Coordinator<br><span>Your Company Name</span></p>
                    </div>

                    <div class="footer-center">
                        <p>
                            2464 Royal Ln. Mesa, New Jersey 45463<br>
                            yourcompany@gmail.com<br>
                            (209) 555-0104
                        </p>
                    </div>

                    <div class="footer-right">
                        <div class="badge">
                            <p><strong>8 CPD</strong><br>POINTS</p>
                        </div>
                    </div>
                </footer>
            </div>
        </div>

    </div>
</section><!-- /about Section -->
