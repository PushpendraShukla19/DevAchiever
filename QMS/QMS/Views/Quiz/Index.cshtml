@model IEnumerable<QMS.Models.Certificates>

<section id="certificates" class="team section-bg">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Certifications</h2>
            <p>Explore my technical and non-technical certifications showcasing continuous learning and growth.</p>
        </div>

        <div class="row gy-4">
            @foreach (var cert in Model)
            {
                <div class="col-lg-6 show-mouse" data-aos="fade-up" data-aos-delay="300" onclick="StartCertification(@cert.Id)">
                    <div class="team-member d-flex align-items-start">
                        <div class="pic">
                            <img src="@cert.Image" class="img-fluid" alt="@cert.Name" />
                        </div>
                        <div class="member-info">
                            <h4>@cert.Name</h4>
                            <span>Certification</span>
                            <p>@cert.Description</p>
                            <div class="social">
                                <a href="#"><i class="bi bi-twitter-x"></i></a>
                                <a href="#"><i class="bi bi-facebook"></i></a>
                                <a href="#"><i class="bi bi-instagram"></i></a>
                                <a href="#"><i class="bi bi-linkedin"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<script>
    function StartCertification(Id) {
        // Build the correct MVC URL dynamically
        const baseUrl = '@Url.Action("StartCertification", "Quiz")';
        window.location.href = `${baseUrl}/${Id}`;
    }
</script>